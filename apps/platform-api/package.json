{
	"name": "@oksai/platform-api",
	"version": "0.1.0",
	"description": "平台业务 API - 多租户 SaaS 数据分析平台主入口",
	"license": "AGPL-3.0",
	"private": true,
	"main": "./dist/main.js",
	"scripts": {
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"typecheck": "tsc --noEmit",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:e2e": "jest --config ./jest-e2e.config.js",
		"lint": "eslint src/ --fix",
		"lint:check": "eslint src/",
		"lint:fix": "eslint src/ --ext .ts --fix",
		"clean": "rimraf dist coverage",
		"lsof-kill": "for port in 3000 3001 3002 3003 3004; do lsof -ti :$port | xargs -r kill -9 2>/dev/null && echo \"端口 $port 已清理\" || true; done"
	},
	"dependencies": {
		"@fastify/static": "catalog:",
		"@nestjs/common": "catalog:",
		"@nestjs/core": "catalog:",
		"@nestjs/platform-fastify": "catalog:",
		"@nestjs/swagger": "catalog:",
		"@oksai/app-kit": "workspace:*",
		"@oksai/auth": "workspace:*",
		"@oksai/authorization": "workspace:*",
		"@oksai/config": "workspace:*",
		"@oksai/context": "workspace:*",
		"@oksai/cqrs": "workspace:*",
		"@oksai/database": "workspace:*",
		"@oksai/eda": "workspace:*",
		"@oksai/event-store": "workspace:*",
		"@oksai/exceptions": "workspace:*",
		"@oksai/identity": "workspace:*",
		"@oksai/kernel": "workspace:*",
		"@oksai/logger": "workspace:*",
		"@oksai/messaging": "workspace:*",
		"@oksai/tenant": "workspace:*",
		"reflect-metadata": "catalog:",
		"rxjs": "catalog:"
	},
	"devDependencies": {
		"@nestjs/cli": "catalog:",
		"@nestjs/schematics": "catalog:",
		"@nestjs/testing": "catalog:",
		"pino-pretty": "catalog:"
	},
	"engines": {
		"node": ">=20"
	}
}
