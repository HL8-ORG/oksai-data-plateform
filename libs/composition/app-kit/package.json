{
	"name": "@oksai/app-kit",
	"version": "0.1.0",
	"description": "平台组装层 - 统一装配入口和插件系统",
	"license": "AGPL-3.0",
	"private": true,
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"typecheck": "tsc --noEmit",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src/ --ext .ts",
		"lint:fix": "eslint src/ --ext .ts --fix",
		"clean": "rimraf dist coverage"
	},
	"dependencies": {
		"@nestjs/common": "^11.0.0",
		"@nestjs/core": "^11.0.0",
		"@oksai/kernel": "workspace:*",
		"@oksai/exceptions": "workspace:*",
		"@oksai/config": "workspace:*",
		"@oksai/context": "workspace:*",
		"@oksai/event-store": "workspace:*",
		"@oksai/cqrs": "workspace:*",
		"@oksai/eda": "workspace:*",
		"@oksai/database": "workspace:*",
		"@oksai/messaging": "workspace:*",
		"@oksai/auth": "workspace:*",
		"@oksai/authorization": "workspace:*"
	},
	"devDependencies": {
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.7",
		"jest": "^30.0.0",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.5",
		"typescript": "^5.7.3"
	},
	"peerDependencies": {
		"@nestjs/common": "^11.0.0",
		"@nestjs/core": "^11.0.0"
	},
	"engines": {
		"node": ">=20"
	}
}
