{
	"name": "@oksai/auth",
	"version": "0.2.0",
	"description": "认证模块 - Better Auth 集成、用户认证、会话管理",
	"license": "AGPL-3.0",
	"private": true,
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"typecheck": "tsc --noEmit",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
		"test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
		"lint": "eslint src/ --fix",
		"lint:check": "eslint src/",
		"lint:fix": "eslint src/ --ext .ts --fix",
		"clean": "rimraf dist coverage"
	},
	"dependencies": {
		"@nestjs/common": "catalog:",
		"@nestjs/config": "catalog:",
		"@nestjs/event-emitter": "^2.0.0",
		"@nestjs/passport": "catalog:",
		"@oksai/better-auth-mikro-orm": "workspace:*",
		"@oksai/identity": "workspace:*",
		"@oksai/kernel": "workspace:*",
		"better-auth": "catalog:",
		"class-transformer": "catalog:",
		"class-validator": "catalog:",
		"dset": "^3.1.4",
		"passport": "catalog:",
		"passport-jwt": "catalog:",
		"reflect-metadata": "catalog:",
		"rxjs": "catalog:"
	},
	"devDependencies": {
		"@mikro-orm/core": "catalog:",
		"@nestjs/testing": "catalog:",
		"@types/passport-jwt": "^4.0.1",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.1"
	},
	"peerDependencies": {
		"@mikro-orm/core": ">=6.0.0",
		"@mikro-orm/postgresql": ">=6.0.0"
	},
	"engines": {
		"node": ">=20"
	}
}
