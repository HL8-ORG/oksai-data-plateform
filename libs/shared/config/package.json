{
	"name": "@oksai/config",
	"version": "0.2.0",
	"description": "配置管理模块 - 基于 @nestjs/config 增强，支持 zod schema 验证、类型安全访问",
	"license": "AGPL-3.0",
	"private": true,
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"typecheck": "tsc --noEmit",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src/ --fix",
		"lint:check": "eslint src/",
		"lint:fix": "eslint src/ --ext .ts --fix",
		"clean": "rimraf dist coverage"
	},
	"dependencies": {
		"@nestjs/common": "^11.0.0",
		"@nestjs/config": "^4.0.0",
		"@oksai/kernel": "workspace:*",
		"zod": "^3.24.0"
	},
	"devDependencies": {
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.7",
		"jest": "^30.0.0",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.5",
		"typescript": "^5.7.3"
	},
	"peerDependencies": {
		"@nestjs/common": "^10.0.0 || ^11.0.0",
		"zod": "^3.0.0"
	},
	"engines": {
		"node": ">=20"
	}
}
