{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "node16",
		"moduleResolution": "node16",
		"removeComments": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/**/*.spec.ts", "src/**/*.int-spec.ts", "src/**/*.e2e-spec.ts"]
}
