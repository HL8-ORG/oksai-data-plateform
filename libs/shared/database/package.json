{
	"name": "@oksai/database",
	"version": "0.2.0",
	"description": "数据库访问模块 - MikroORM 集成、租户感知仓储、事务管理",
	"license": "AGPL-3.0",
	"private": true,
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"typecheck": "tsc --noEmit",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src/ --fix",
		"lint:check": "eslint src/",
		"lint:fix": "eslint src/ --ext .ts --fix",
		"clean": "rimraf dist coverage"
	},
	"dependencies": {
		"@mikro-orm/core": "catalog:",
		"@mikro-orm/migrations": "catalog:",
		"@mikro-orm/nestjs": "catalog:",
		"@mikro-orm/postgresql": "catalog:",
		"@nestjs/common": "catalog:",
		"@nestjs/config": "catalog:",
		"@oksai/config": "workspace:*",
		"@oksai/plugin": "workspace:*",
		"pg": "catalog:"
	},
	"peerDependencies": {
		"@mikro-orm/core": "^6.0.0",
		"@mikro-orm/nestjs": "^6.0.0",
		"@mikro-orm/postgresql": "^6.0.0",
		"@nestjs/common": "^11.0.0",
		"@nestjs/config": "^4.0.0"
	},
	"engines": {
		"node": ">=20"
	}
}
